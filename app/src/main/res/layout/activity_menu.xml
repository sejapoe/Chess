<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity">

    <Button
            android:text="@string/start"
            android:layout_width="314dp"
            android:layout_height="74dp" android:id="@+id/startBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.29"/>
    <Button
            android:text="@string/themeChoose"
            android:layout_width="314dp"
            android:layout_height="74dp" android:id="@+id/themeChooseBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.39"/>
    <Button
            android:text="@string/en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/enBtn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="80dp" android:layout_marginBottom="28dp"/>
    <Button
            android:text="@string/ru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ruBtn"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="80dp" android:layout_marginBottom="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>