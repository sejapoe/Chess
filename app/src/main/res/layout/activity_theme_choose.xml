<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ThemeChooseActivity">
    <TableLayout
            android:layout_width="360dp"
            android:layout_height="360dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/boardHolder"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/themeColor"
            app:layout_constraintStart_toEndOf="@+id/prevColorBtn"
            app:layout_constraintEnd_toStartOf="@+id/nextColorBtn" app:layout_constraintBottom_toTopOf="@+id/themeRes"
            app:layout_constraintHorizontal_bias="0.495" android:layout_marginBottom="60dp"/>
    <Button
            android:text="@string/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nextColorBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" app:layout_constraintBottom_toTopOf="@+id/nextResBtn"
            android:layout_marginBottom="32dp"/>
    <Button
            android:text="@string/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/prevColorBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
            app:layout_constraintBottom_toTopOf="@+id/prevResBtn" android:layout_marginBottom="32dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/themeRes"
            app:layout_constraintStart_toEndOf="@+id/prevResBtn"
            app:layout_constraintEnd_toStartOf="@+id/nextResBtn" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.495" android:layout_marginBottom="32dp"/>
    <Button
            android:text="@string/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nextResBtn"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="64dp"/>
    <Button
            android:text="@string/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/prevResBtn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="64dp" android:layout_marginBottom="16dp"
            tools:ignore="TooManyViews"/>

</androidx.constraintlayout.widget.ConstraintLayout>